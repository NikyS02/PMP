<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextNumberDecimal3_Cena2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Cena v Kč"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="76dp" />


    <EditText
        android:id="@+id/editTextNumberDecimal4_Gramaz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hmotnost v gramech"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal3_Cena2"
        tools:layout_editor_absoluteX="76dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Cena na kg:"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal4_Gramaz2"
        tools:layout_editor_absoluteX="76dp" />

    <Button
        android:id="@+id/button_spocitej"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spočítej"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="444dp" />

    <EditText
        android:id="@+id/editTextNumberDecimal2_Gramaz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hmotnost v gramech"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal_Cena1"
        tools:layout_editor_absoluteX="76dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Cena na kg: "
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal2_Gramaz1"
        tools:layout_editor_absoluteX="76dp" />

    <TextView
        android:id="@+id/textView_c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Produkt 1:"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="76dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Produkt 2:"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumberDecimal2_Gramaz1"
        tools:layout_editor_absoluteX="76dp" />

    <EditText
        android:id="@+id/editTextNumberDecimal_Cena1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Cena v Kč"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/textView_c1"
        tools:layout_editor_absoluteX="76dp" />

</androidx.constraintlayout.widget.ConstraintLayout>